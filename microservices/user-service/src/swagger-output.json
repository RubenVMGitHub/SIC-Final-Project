  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "example": "507f1f77bcf86cd799439011"
        },
        "email": {
          "type": "string",
          "example": "user@example.com"
        },
        "displayName": {
          "type": "string",
          "example": "John Doe"
        },
        "role": {
          "type": "string",
          "example": "user"
        },
        "favouriteSport": {
          "type": "string",
          "example": "Football"
        },
        "friends": {
          "type": "array",
          "example": [],
          "items": {}
        },
        "createdAt": {
          "type": "string",
          "example": "2026-01-14T10:00:00.000Z"
        },
        "updatedAt": {
          "type": "string",
          "example": "2026-01-14T10:00:00.000Z"
        }
      }
    },
    "RegisterRequest": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "example": "user@example.com"
        },
        "password": {
          "type": "string",
          "example": "securePassword123"
        },
        "displayName": {
          "type": "string",
          "example": "John Doe"
        },
        "favouriteSport": {
          "type": "string",
          "example": "Football"
        }
      },
      "required": [
        "email",
        "password",
        "displayName"
      ]
    },
    "UpdateUserRequest": {
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "example": "Jane Doe"
        },
        "favouriteSport": {
          "type": "string",
          "example": "Basketball"
        }
      }
    },
    "FriendRequest": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "string",
          "example": "507f1f77bcf86cd799439011"
        },
        "from": {
          "type": "string",
          "example": "507f1f77bcf86cd799439012"
        },
        "to": {
          "type": "string",
          "example": "507f1f77bcf86cd799439013"
        },
        "status": {
          "type": "string",
          "example": "pending"
        },
        "createdAt": {
          "type": "string",
          "example": "2026-01-14T10:00:00.000Z"
        }
      }
    },
    "SendFriendRequest": {
      "type": "object",
      "properties": {
        "toUserId": {
          "type": "string",
          "example": "507f1f77bcf86cd799439012"
        }
      },
      "required": [
        "toUserId"
      ]
    },
    "RespondFriendRequest": {
      "type": "object",
      "properties": {
        "action": {
          "type": "string",
          "example": "accept"
        }
      },
      "required": [
        "action"
      ]
    }
  }
